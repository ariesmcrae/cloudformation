{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "NetworkCrossStack",

  "Mappings" : {
    "Config" : {
      "SubnetPublic" : { "CIDRAZa" : "10.0.1.0/24", "CIDRAZb" : "10.0.2.0/24" },
      "SubnetPrivate" : { "CIDRAZa" : "10.0.3.0/24", "CIDRAZb" : "10.0.4.0/24" }
    }
  },


  "Resources" : {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "InstanceTenancy": "default",
        "Tags": [ { "Key": "Name", "Value": { "Ref": "AWS::StackName" } } ]
      }
    },
    

    "InternetGateway" : {
       "Type" : "AWS::EC2::InternetGateway",
       "Properties" : {
         "Tags" : [ {"Key" : "Name", "Value" : {"Ref": "AWS::StackName"} } ]
       }
    },

    "VPCGatewayAttachment" : {
      "Type" : "AWS::EC2::VPCGatewayAttachment",
      "DependsOn": "InternetGateway",        
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
          "InternetGatewayId" : { "Ref" : "InternetGateway" }
        }
    },

      "SubnetAZaPublic" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
           "VpcId" : { "Ref" : "VPC" },
           "CidrBlock" : { "Fn::FindInMap" : [ "Config", "SubnetPublic", "CIDRAZa"] },
           "MapPublicIpOnLaunch" : "true",
           "AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : "" } ] },                                          
           "Tags" : [
               {"Key" : "Name", "Value" : { "Fn::Sub": [ "${ParentStackName}-AZa-public", { "ParentStackName": {"Ref" : "AWS::StackName" }} ]} },
              {"Key" : "Network", "Value" : "Public"} 
           ]
         }
      },

      "SubnetAZbPublic" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
           "VpcId" : { "Ref" : "VPC" },
           "CidrBlock" : { "Fn::FindInMap" : [ "Config", "SubnetPublic", "CIDRAZb"] },
           "MapPublicIpOnLaunch" : "true",
           "AvailabilityZone" : { "Fn::Select" : [ "1", { "Fn::GetAZs" : "" } ] },                                          
           "Tags" : [
               {"Key" : "Name", "Value" : { "Fn::Sub": [ "${ParentStackName}-AZb-public", { "ParentStackName": {"Ref" : "AWS::StackName" }} ]} },
              {"Key" : "Network", "Value" : "Public"} 
           ]
         }
      },

      "SubnetAZaPrivate" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
           "VpcId" : { "Ref" : "VPC" },
           "CidrBlock" : { "Fn::FindInMap" : [ "Config", "SubnetPrivate", "CIDRAZa"] },
           "MapPublicIpOnLaunch" : "false",           
           "AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : "" } ] },                                          
           "Tags" : [
               {"Key" : "Name", "Value" : { "Fn::Sub": [ "${ParentStackName}-AZa-private", { "ParentStackName": {"Ref" : "AWS::StackName" }} ]} },
              {"Key" : "Network", "Value" : "Private"} 
           ]
         }
      },

      "SubnetAZbPrivate" : {
         "Type" : "AWS::EC2::Subnet",
         "Properties" : {
           "VpcId" : { "Ref" : "VPC" },
           "CidrBlock" : { "Fn::FindInMap" : [ "Config", "SubnetPrivate", "CIDRAZb"] },
           "MapPublicIpOnLaunch" : "false",
           "AvailabilityZone" : { "Fn::Select" : [ "1", { "Fn::GetAZs" : "" } ] },                                          
           "Tags" : [
               {"Key" : "Name", "Value" : { "Fn::Sub": [ "${ParentStackName}-AZb-private", { "ParentStackName": {"Ref" : "AWS::StackName" }} ]} },
              {"Key" : "Network", "Value" : "Private"} 
           ]
         }
      }    


  }
}